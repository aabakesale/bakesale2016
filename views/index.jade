doctype html
head
  title 義賣活動
  meta(charset="UTF-8")
  link(rel='stylesheet', href='/style.css')

body
  h1 義賣活動
  form.form(action='/submit', method='post')
    h3 個人資料
    .name
      label 姓名
      input(name='order[name]')
    .email
      label Email信箱
      input(name='order[email]')

    h3 訂單
    table.table
      thead
        tr
          th 品項
          th 單價(Unit Price)
          th 幾份(Unit)
          th 備註
      tbody
        tr
          td 蘿蔔絲餅
          td $6/4個
          td
            input(name='order[蘿蔔絲餅]')
          td 每份四個
        tr
          td 豆沙包
          td $8/盒
          td
            input(name='order[豆沙包]')
          td
    button.submit#submit 提交
